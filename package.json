{
  "name": "news-aggregator-platform",
  "private": true,
  "version": "0.1.0",
  "description": "Monorepo scaffold for news aggregation and digest delivery",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "./scripts/bootstrap.sh",
    "dev:api": "npm --workspace services/api run dev",
    "build:api": "npm --workspace services/api run build",
    "db:migrate": "npm --workspace services/api run db:migrate",
    "test:api": "npm run db:migrate && npm --workspace services/api run test",
    "dev:ingestion": "npm --workspace services/ingestion run dev",
    "build:ingestion": "npm --workspace services/ingestion run build",
    "run:ingestion:once": "npm --workspace services/ingestion run run-once",
    "dev:digest": "npm --workspace services/digest-worker run dev",
    "build:digest": "npm --workspace services/digest-worker run build",
    "run:digest:once": "npm --workspace services/digest-worker run run-once",
    "dev:email": "npm --workspace services/email-worker run dev",
    "build:email": "npm --workspace services/email-worker run build",
    "run:email:once": "npm --workspace services/email-worker run run-once",
    "test:email": "npm run db:migrate && npm --workspace services/email-worker run test",
    "pipeline:e2e": "./scripts/pipeline-e2e.sh"
  }
}
